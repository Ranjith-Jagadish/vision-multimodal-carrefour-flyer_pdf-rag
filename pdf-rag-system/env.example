# PDF RAG System Configuration
# Copy this file to .env and edit as needed: cp env.example .env

# Upload and storage
UPLOAD_DIR=./uploads
CHROMA_PERSIST_DIR=./chroma_db
CITATION_IMAGES_DIR=./static/citations

# Embedding model (sentence-transformers)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LLM Provider: ollama | openai
LLM_PROVIDER=ollama

# Ollama (default LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# OpenAI (optional â€“ set LLM_PROVIDER=openai to use)
# OPENAI_API_KEY=your_api_key_here

# VLM for product extraction (optional)
# OLLAMA_VISION_MODEL=granite3.2-vision:2b
